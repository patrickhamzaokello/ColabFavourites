# Docker Environment Configuration
# Copy to .env for Docker Compose

# Database Configuration
DB_HOST=mysql
DB_USER=mwonya_user
DB_PASSWORD=mwonya_password
DB_NAME=mwonya
DB_PORT=3306

# MySQL Root Password
MYSQL_ROOT_PASSWORD=rootpassword

# API Configuration
DEBUG=false
HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=production

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Nginx Configuration (optional)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Security (change in production)
API_KEY=your_secret_api_key_here

# Performance
CACHE_TTL=3600
ENABLE_CACHING=true

# Recommendation Engine Settings
DEFAULT_K_NEIGHBORS=10
MAX_K_NEIGHBORS=50
SVD_COMPONENTS=20
BAYESIAN_CONFIDENCE_WEIGHT=10.0